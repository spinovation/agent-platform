# Example Terraform Variables for Multi-Tenant Autonomous Agent Platform
# Copy this file to terraform.tfvars and customize for your environment

# General Configuration
project_name = "agent-platform"
environment  = "dev"
owner        = "platform-team"
aws_region   = "us-west-2"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
single_nat_gateway = true  # Set to false for production
allowed_cidr_blocks = [
  "10.0.0.0/8",     # Private networks
  "172.16.0.0/12",  # Private networks
  "192.168.0.0/16", # Private networks
  # Add your office/VPN CIDR blocks here
]

# EKS Configuration
kubernetes_version              = "1.28"
eks_node_instance_types        = ["t3.medium", "t3.large"]
eks_compute_node_instance_types = ["c5.large", "c5.xlarge"]
eks_node_group_min_size        = 1
eks_node_group_max_size        = 10
eks_node_group_desired_size    = 3
ec2_key_pair_name              = ""  # Add your EC2 key pair name

# RDS Configuration
postgres_version               = "15.4"
rds_instance_class            = "db.t3.medium"
rds_allocated_storage         = 100
rds_max_allocated_storage     = 1000
database_name                 = "agentplatform"
database_username             = "dbadmin"
rds_backup_retention_period   = 7
rds_backup_window            = "03:00-04:00"
rds_maintenance_window       = "sun:04:00-sun:05:00"
rds_multi_az                 = true
rds_deletion_protection      = true

# ElastiCache Configuration
elasticache_node_type                    = "cache.t3.medium"
elasticache_num_cache_nodes             = 2
elasticache_snapshot_retention_limit    = 5
elasticache_snapshot_window             = "03:00-05:00"
elasticache_maintenance_window          = "sun:05:00-sun:07:00"
elasticache_automatic_failover_enabled  = true

# Lambda Configuration
lambda_runtime     = "python3.11"
lambda_timeout     = 300
lambda_memory_size = 512

# Monitoring Configuration
enable_cloudwatch_logs = true
log_retention_in_days  = 30

# Security Configuration
enable_waf    = true
enable_shield = false

# Cost Optimization
enable_spot_instances = false
spot_instance_types   = ["t3.medium", "t3.large", "m5.large", "m5.xlarge"]

# Backup and Disaster Recovery
enable_cross_region_backup = false
backup_region             = "us-east-1"

# Compliance and Governance
enable_config    = true
enable_cloudtrail = true
enable_guardduty  = true

# Additional Tags
additional_tags = {
  CostCenter = "engineering"
  Project    = "agent-platform"
  Team       = "platform-team"
}

